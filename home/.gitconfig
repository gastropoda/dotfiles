[user]
  name = Artem Baguinski
  email = abaguinski@depraktijkindex.nl
[apply]
  ignorewhitespace = change
  whitespace = nowarn

[core]
  excludesfile = ~/.gitignore_global
#  autocrlf = true
#  safecrlf = false

[color]
  branch = auto
  diff = auto
  status = auto
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[branch]
	autosetuprebase = always
[push]
	default = matching

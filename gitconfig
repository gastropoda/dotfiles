# vim:ft=gitconfig
[include]
	path = ~/.gitconfig_local

# Put user specific settings in ~/.gitconfig_local, e.g.:
#
#  [user]
#    name = Artem Baguinski
#    email = abaguinski@depraktijkindex.nl
#  [github]
#    user = artm

[apply]
  ignorewhitespace = change
  whitespace = nowarn
[core]
  excludesfile = ~/.gitignore_global
	autocrlf = input
	pager = less -F -X
[color]
  branch = auto
  diff = auto
  status = auto
  ui = auto
[color "branch"]
  current = bold yellow
  local = yellow
  remote = cyan
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[branch]
  autosetuprebase = always
[push]
  default = current
[format]
  pretty = oneline
[log]
  abbrevCommit = true
  decorate = true
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[alias]
	fmerge = merge --no-ff
